<Window x:Class="Iz.SendmailTool.AppBase.Views.NewTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iz.SendmailTool.AppBase.Views"
        xmlns:ctrl="clr-namespace:Iz.SendmailTool.AppBase.Controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid  x:Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="60px" />
            <RowDefinition Height="60px" />
            <RowDefinition Height="60px" />
            <RowDefinition Height="60px" />
            <RowDefinition Height="60px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ctrl:InputControl Grid.Row="0" Label="Name" Text="{Binding Model.Name, Mode=TwoWay}"/>
        <ctrl:InputControl Grid.Row="1" Label="To" Text="{Binding Model.Name, Mode=TwoWay}"/>
        <ctrl:InputControl Grid.Row="2" Label="CC" Text="{Binding Model.Name, Mode=TwoWay}"/>
        <ctrl:InputControl Grid.Row="3" Label="Subject" Text="{Binding Model.Name, Mode=TwoWay}"/>
        <ctrl:InputControl Grid.Row="4" Label="Name" Text="{Binding Model.Name, Mode=TwoWay}"/>
        <ctrl:HtmlControl Grid.Row="5" />
    </Grid>
</Window>
